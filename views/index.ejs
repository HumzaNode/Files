<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD Example</title>
</head>
<body>
  <h1>CRUD Example</h1>
  <ul>
    <% items.forEach(item => { %>
      <li>
        <%= item.name %> - <%= item.description %>
        <a href="/edit/<%= item._id %>">Edit</a>
        <a href="/delete/<%= item._id %>">Delete</a>
      </li>
    <% }) %>
  </ul>
  <a href="/new">Add New Item</a>
</body>
</html>
